<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boxText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/background_rounded</item>
    </style>

    <style name="CustomThemeDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogHeaderStyle">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_item_header</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DialogMessageStyle">
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginTop">@dimen/dimen_15</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>
</resources>
