<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boxText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/background_rounded</item>
    </style>

    <style name="CustomThemeDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogHeaderStyle">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_item_header</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DialogMessageStyle">
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginTop">@dimen/dimen_15</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Toolbar.Primary" parent="">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation" tools:ignore="NewApi">@dimen/design_appbar_elevation</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/colorPrimary</item>
        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="Widget.Catalog.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary"/>

    <style name="Widget.Catalog.Toolbar.WithCloseButton" parent="Widget.Catalog.Toolbar">
        <item name="navigationContentDescription">Close demo</item>
        <item name="navigationIcon">@drawable/ic_close_vd_theme_24px</item>
    </style>
</resources>
